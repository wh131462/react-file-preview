{
  "name": "@eternalheart/react-file-preview-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A modern, feature-rich file preview component for React - Monorepo",
  "type": "module",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "pnpm --filter @eternalheart/react-file-preview-example dev",
    "dev:docs": "pnpm --filter @eternalheart/react-file-preview-docs dev",
    "build": "pnpm build:lib && pnpm build:example && pnpm build:docs",
    "build:lib": "pnpm --filter @eternalheart/react-file-preview build",
    "build:example": "pnpm --filter @eternalheart/react-file-preview-example build",
    "build:docs": "pnpm --filter @eternalheart/react-file-preview-docs build",
    "preview:example": "pnpm --filter @eternalheart/react-file-preview-example preview",
    "preview:docs": "pnpm --filter @eternalheart/react-file-preview-docs preview",
    "clean": "pnpm -r exec rm -rf dist lib .vitepress/dist node_modules && rm -rf node_modules dist-deploy",
    "lint": "eslint packages --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "gh": "bash scripts/deploy.sh",
    "version:patch": "pnpm --filter @eternalheart/react-file-preview version:patch",
    "version:minor": "pnpm --filter @eternalheart/react-file-preview version:minor",
    "version:major": "pnpm --filter @eternalheart/react-file-preview version:major",
    "pub": "pnpm --filter @eternalheart/react-file-preview pub",
    "pub:patch": "pnpm version:patch && pnpm pub",
    "pub:minor": "pnpm version:minor && pnpm pub",
    "pub:major": "pnpm version:major && pnpm pub"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wh131462/react-file-preview.git"
  },
  "bugs": {
    "url": "https://github.com/wh131462/react-file-preview/issues"
  },
  "homepage": "https://wh131462.github.io/react-file-preview",
  "license": "MIT",
  "author": {
    "name": "EternalHeart",
    "email": "hao131462@qq.com",
    "url": "https://github.com/wh131462"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "typescript": "^5.6.3"
  }
}