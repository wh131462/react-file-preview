{
  "name": "@eternalheart/react-file-preview-example",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm copy-pdf-worker && vite",
    "build": "pnpm copy-pdf-worker && tsc && vite build",
    "preview": "vite preview",
    "copy-pdf-worker": "node -e \"const fs = require('fs'); const path = require('path'); const src = require.resolve('pdfjs-dist/build/pdf.worker.min.mjs'); fs.mkdirSync('public', {recursive: true}); fs.copyFileSync(src, 'public/pdf.worker.min.mjs')\""
  },
  "dependencies": {
    "@eternalheart/react-file-preview": "workspace:*",
    "lucide-react": "^0.460.0",
    "pdfjs-dist": "4.8.69",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  }
}